<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <include resource="org/springframework/boot/logging/logback/base.xml" />
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} \(%X{Slf4jMDCFilter.usernameActive}\) [%X{X-B3-TraceId:-}] %-5level %logger{36}.%M:%L : %msg%n</pattern>
    </encoder>
  </appender>
  <root level="INFO" additivity="false"><appender-ref ref="STDOUT"/></root>
  <Logger name="org.apache.coyote" level="INFO" additivity="false"><appender-ref ref="STDOUT"/></Logger>
  <Logger name="org" level="WARN" additivity="false"><appender-ref ref="STDOUT"/></Logger>
  <Logger name="net" level="WARN" additivity="false"><appender-ref ref="STDOUT"/></Logger>
  <Logger name="com" level="WARN" additivity="false"><appender-ref ref="STDOUT"/></Logger>
  <Logger name="ch" level="WARN" additivity="false"><appender-ref ref="STDOUT"/></Logger>
  <Logger name="org.springframework.web" level="DEBUG" additivity="false"><appender-ref ref="STDOUT"/></Logger>
  <Logger name="com.zaxxer.hikari" level="INFO" />
</configuration>